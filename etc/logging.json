{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "utc": {
      "()": "alignak_webui.utils.logger.UTCFormatter",
      "format": "[%(asctime)s] %(levelname)s: [%(name)s] %(message)s"
    },
    "local": {
      "format": "[%(asctime)s] %(levelname)s: [%(name)s] %(message)s"
    }
  },

  "handlers": {
    "console": {
      "class": "alignak_webui.utils.logger.ColorStreamHandler",
      "level": "DEBUG",
      "formatter": "local",
      "stream": "ext://sys.stdout"
    }
  },

  "root": {
    "level": "INFO",
    "handlers": ["console"]
  }
}